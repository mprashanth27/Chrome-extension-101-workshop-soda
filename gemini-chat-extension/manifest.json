{
    "manifest_version": 3,
    "name": "Gemini Chat Extension",
    "version": "1.0",
    "description": "A Chrome extension for chatting with Google's Gemini AI",
    "icons": {
      "16": "icons/icon16.png"
    },
    "side_panel": {
      "default_path": "src/sidepanel/sidepanel.html"
    },
    "permissions": [
      "storage",
      "sidePanel"
    ],
    "host_permissions": [
      "https://generativelanguage.googleapis.com/*"
    ],
    "background": {
      "service_worker": "src/service-worker.js"
    },
    "options_page": "src/settings/settings.html",
    "action": {
      "default_title": "Gemini Chat"
    }
  }
  